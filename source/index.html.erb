<div class="banner">
       <div class="container text-center">
          <div class="row">
            <div class="col-sm-12 col-md-12">
                <h1 class="banner-title">Welcome Home</h1>
                <p class="banner-description">Rent unique places to stay from local hosts in 190+ countries.</p></br>
                <form class="form-inline">
                    <div class="form-group">
                      <input type="email" class="form-control input-lg" id="email" placeholder="Checkin">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control input-lg" id="pwd" placeholder="Checkout">
                    </div>
                    <select class="form-control input-lg">
                        <option value="1">1 person</option>
                        <option value="2">2 persons</option>
                        <option value="3">3 persons</option>
                    </select>
                    <button type="submit" class="btn btn-primary btn-lg">Search</button>
                </form>
            </div>
        </div>
      </div>
   </div>

    <!-- Your features code -->
    <div class="container text-center feature padded ">
      <div class="row">
        <div class="col-sm-12 col-md-3">
            <%= image_tag "globe.png" %>
            <h2>Discover the world</h2>
            <p>The earth is your new home.</p>
        </div>
        <div class="col-sm-12 col-md-3">
            <%= image_tag "dollar.png" %>
            <h2>Pay online</h2>
            <p>No cash issues anymore</p>
        </div>
        <div class="col-sm-12 col-md-3">
            <%= image_tag "beer.png" %>
            <h2>Meet people</h2>
            <p>Discover new culture and lifestyle.</p>
        </div>
        <div class="col-sm-12 col-md-3">
            <%= image_tag "heart.png" %>
            <h2>Share and love</h2>
            <p>Join a community you will love.</p>
       </div>
      </div>
    </div>
    <!-- Your cards code -->
    <div class="wrapper-red padded features">
    <h1 class="text-center">Your next-trip</h1>
      <div class="container">
          <div class="row">
            <% data.flats.each do |owner, flat| %>
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: url('<%= image_path flat.picture %>');">
                <div class="card-category"><%= flat.city %></div>
                <div class="card-description">
                  <h2><%= flat.name %></h2>
                  <p><%= flat.summary %></p>
                </div>
            <%= image_tag flat.owner_picture, class:"card-user avatar avatar-large" %>
            <%= link_to "#", "flats/#{owner}.html", class: "card-link" %>
              </div>
            </div>
          <% end %>
          </div>
      </div>
    </div>

    <!-- Your newsletter code -->
    <div class="text-center padded">
        <h1>Get news from us</h1>
        <p>Leave us your mail and get news from us</p>
        <form class="form-inline">
          <div class="form-group">
            <label class="sr-only" for="exampleInputEmail3">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Bob@gmail.com">
          </div>
          <button type="submit" class="btn btn-primary">Subscribe</button>
        </form>
    </div>

    <!-- Your map code -->
    <div id="map" style="width: 100%; height: 500px; position: relative; overflow: hidden;"></div>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript">
        var myLatlng = new google.maps.LatLng(48.865021, 2.379853);

        var myOptions = {
          zoom: 16,
          center: myLatlng,
          scrollwheel: false,
          mapTypeId: google.maps.MapTypeId.ROADMAP,
          styles: [] // TODO: replace [] by array from https://snazzymaps.com/
        };

        var map = new google.maps.Map(document.getElementById('map'), myOptions);
        var marker = new google.maps.Marker({
          position: myLatlng,
          map: map,
          title: "You are here!"
        });
    </script>
